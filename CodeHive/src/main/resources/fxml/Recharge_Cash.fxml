<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.RechargeController" style="-fx-padding: 10;">
    <TextField fx:id="txtAmount" promptText="Montant" style="-fx-pref-width: 200;"/>
    <Button text="Recharge du Cash du Wallet" onAction="#handleRecharge" style="-fx-background-color: #007bff; -fx-text-fill: white;"/>
    <Button text="Retour" onAction="#handleBack" style="-fx-background-color: #6c757d; -fx-text-fill: white;"/>
    <Label fx:id="lblStatus" textFill="red"/>
</VBox>
